            <Label fx:id="titleLabel" maxWidth="1.7976931348623157E308" prefHeight="70.0" style="-fx-font-weight: 900;" text="Waker" textFill="#f8f8f8" GridPane.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font>
            </Label>

                  <Button fx:id="addAlarmButton" alignment="BASELINE_RIGHT" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onAddAlarmClicked" prefHeight="25.0" prefWidth="25.0" text="+" GridPane.columnIndex="3" HBox.hgrow="NEVER">
